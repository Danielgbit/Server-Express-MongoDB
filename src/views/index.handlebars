<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Productos</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <h1 class="product-list">Lista de Productos</h1>

{{#if products.length}}
    <table class="table table-striped table-dark custom-table">
        <thead>
            <tr>
                <th scope="col" class="title-table">Nombre</th>
                <th scope="col" class="title-table">Descripci√≥n</th>
                <th scope="col" class="title-table">Precio</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
                <tr>
                    <td class="text-product-table">{{title}}</td>
                    <td class="text-product-table">{{description}}</td>
                    <td class="text-product-table">${{price}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>No hay productos disponibles.</p>
{{/if}}

    <a href="/realtimeproducts" class="button-realTimeP">Ver productos en tiempo real</a>
</body>
</html>
